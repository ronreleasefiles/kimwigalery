// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id        String   @id @default(cuid())
  name      String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Quan hệ với Image
  images    Image[]
  
  @@map("folders")
}

model Image {
  id        String   @id @default(cuid())
  filename  String
  originalName String
  path      String   // URL path để truy cập ảnh
  base64Data String  // Dữ liệu ảnh dưới dạng base64
  size      Int
  mimeType  String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Quan hệ với Folder (optional)
  folderId  String?
  folder    Folder?  @relation(fields: [folderId], references: [id], onDelete: SetNull)
  
  @@map("images")
}
